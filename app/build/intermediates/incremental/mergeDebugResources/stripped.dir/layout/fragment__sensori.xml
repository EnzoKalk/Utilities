<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Sensori">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center_horizontal"
                android:text="Accelerometro"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/accel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xValue"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp" />

                <TextView
                    android:id="@+id/yValue"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp" />

                <TextView
                    android:id="@+id/zValue"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center_horizontal"
                android:text="Giroscopio"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/gyro_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xGyroValue"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp" />

                <TextView
                    android:id="@+id/yGyroValue"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp" />

                <TextView
                    android:id="@+id/zGyroValue"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center_horizontal"
                android:text="Magnetometro"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/magno_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xMagnoValue"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp" />

                <TextView
                    android:id="@+id/yMagnoValue"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp" />

                <TextView
                    android:id="@+id/zMagnoValue"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center_horizontal"
                android:text="Altri sensori"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/other_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/light"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                     />

                <TextView
                    android:id="@+id/pressure"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp" />

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>