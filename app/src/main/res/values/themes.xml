<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme -->
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/cream</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/beige</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="color">@color/jeans</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here -->
        <item name="android:textColor">@color/black</item>
        <item name="appBarLayoutStyle">@color/cream</item>
        <item name="colorPrimaryDark">@color/cream</item>
        <item name="colorAccent">@color/beige</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <!-- ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Alter Dialog -->
        <item name="dialogTheme">@style/DialogThemeLight</item>
        <item name="alertDialogTheme">@style/DialogThemeLight</item>
    </style>

</resources>