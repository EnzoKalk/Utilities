<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme Selected -->
    <style name="LightThemeSelected" parent="ThemeOverlay.AppCompat.Light">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/cream</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/beige</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="color">@color/jeans</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here -->
        <item name="android:textColor">@color/black</item>
        <item name="appBarLayoutStyle">@color/cream</item>
        <item name="colorBackgroundFloating">@color/beige</item>
        <!-- ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Alter dialog -->
        <item name="dialogTheme">@style/DialogThemeLight</item>
        <item name="alertDialogTheme">@style/DialogThemeLight</item>
    </style>

    <!-- Alter dialog style -->
    <style name="DialogThemeLight" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/beige</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <!-- Dark Theme Selected -->
    <style name="DarkThemeSelected" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/dark_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="color">@color/grey</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here -->
        <item name="android:textColor">@color/white</item>
        <item name="appBarLayoutStyle">@color/black</item>
        <item name="colorBackgroundFloating">@color/red</item>
        <!-- ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Alter dialog -->
        <item name="dialogTheme">@style/DialogThemeDark</item>
        <item name="alertDialogTheme">@style/DialogThemeDark</item>
    </style>

    <!-- Alter dialog style -->
    <style name="DialogThemeDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/red</item>
        <item name="colorAccent">@color/red</item>
    </style>
</resources>