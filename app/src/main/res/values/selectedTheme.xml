<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LightThemeSelected" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/cream</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/beige</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="color">@color/jeans</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="appBarLayoutStyle">@color/cream</item>
        <item name="colorPrimaryDark">@color/cream</item>
        <item name="colorAccent">@color/beige</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorPrimarySurface">@color/black</item>
        <item name="colorOnBackground">@color/translucent_jeans</item>
        <item name="backgroundColor">@color/jeans</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="dialogTheme">@style/DialogThemeLight</item>
        <item name="alertDialogTheme">@style/DialogThemeLight</item>
    </style>

    <style name="DialogThemeLight" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/beige</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="DarkThemeSelected" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/dark_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="color">@color/grey</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="appBarLayoutStyle">@color/black</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
        <item name="colorOnPrimarySurface">@color/dark_gray</item>
        <item name="colorPrimarySurface">@color/red</item>
        <item name="colorOnBackground">@color/translucent_black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="dialogTheme">@style/DialogThemeDark</item>
        <item name="alertDialogTheme">@style/DialogThemeDark</item>
    </style>

    <style name="DialogThemeDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/red</item>
        <item name="colorAccent">@color/red</item>
    </style>
</resources>